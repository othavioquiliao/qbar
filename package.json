{
  "name": "qbar",
  "version": "3.0.0",
  "description": "LLM quota monitor for Waybar - Claude, Codex, Antigravity",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "qbar": "./scripts/qbar"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "test": "bun test",
    "typecheck": "bun x tsc --noEmit",
    "build": "bun build src/index.ts --outdir dist --target bun"
  },
  "keywords": [
    "waybar",
    "claude",
    "codex",
    "antigravity",
    "llm",
    "quota"
  ],
  "author": "Othavio",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@clack/prompts": "1.0.0",
    "ora": "9.3.0"
  }
}
