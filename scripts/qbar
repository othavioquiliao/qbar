#!/usr/bin/env bash
# qbar - LLM quota monitor for Waybar
SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"
cd "$SCRIPT_DIR/.." || exit 1

case "${1:-}" in
  refresh)
    shift
    exec bun src/refresh.ts "$@"
    ;;
  menu)
    exec bun src/tui.ts
    ;;
  status)
    exec bun src/index.ts --command status "$@"
    ;;
  *)
    exec bun src/index.ts "$@"
    ;;
esac
