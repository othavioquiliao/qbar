#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

OUT=$($SCRIPT_DIR/waybar-llm-usage.sh)
python3 - <<'PY'
import json,os
raw=os.environ.get("OUT","")
try:
    data=json.loads(raw)
    print(data.get("tooltip", ""))
except Exception:
    print("(failed to parse tooltip)")
    print(raw)
PY

echo
read -p "Press Enter..."
